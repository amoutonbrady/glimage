{
  "name": "glimage",
  "version": "1.0.0",
  "description": "0 dependencies, less than 1kb library to glue images together",
  "repository": {
    "type": "git",
    "url": "https://github.com/amoutonbrady/glimage.git"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/glimage.umd.js",
  "module": "./dist/glimage.es.js",
  "browser": "./dist/glimage.iife.js",
  "types": "./dist/glimage.d.ts",
  "exports": {
    ".": {
      "import": "./dist/glimage.es.js",
      "require": "./dist/glimage.umd.js",
      "browser": "./dist/glimage.iife.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc",
    "format": "prettier --write \"{src,playground}/**/*.{html,ts}\"",
    "prepublishOnly": "package-check && pnpm build"
  },
  "keywords": [
    "image",
    "glimage",
    "merge",
    "image-merge",
    "glue-images"
  ],
  "author": "Alexandre Mouton-Brady",
  "license": "MIT",
  "devDependencies": {
    "@skypack/package-check": "^0.2.2",
    "@types/node": "^14.14.27",
    "prettier": "^2.2.1",
    "typescript": "^4.2.0-beta",
    "vite": "^2.0.0-beta.69"
  }
}
